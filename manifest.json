{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "1.0",
  "permissions": [
    "declarativeNetRequest", 
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
